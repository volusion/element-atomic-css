{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["prettier"],
  "rules": {
    "no-const-assign": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.spec.js", "*.test.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-console": ["error", { "allow": ["error", "warn"] }]
      }
    }
  ]
}
